#!/bin/bash

SUBJECT=src/cut

assert-equal () {
    #${RUNNER:-eval} ./$SUBJECT $1 &>/dev/null
    retval=`${RUNNER:-eval} ./$SUBJECT $1 | tail -n 1 | grep -c "fault"`
    echo $retval
}

case "$1" in
    1)
        touch blank
        assert-equal "--output-d=: -b1,1234567890- blank"
        rm -f blank
        ;;
esac
